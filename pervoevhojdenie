#include <stdio.h>
#include <stdlib.h>
int *str_chr(char *s, char c)
{
    int i=0;
    int k=-1;
    for (i=0; s[i]!='\0';i++){
       if (k<0)
           if (s[i]==c)
               k=i;
    }
   return k;
}

int main()
{
    char q[] = "Hello!"; // Введите строку
    char w='l'; //Введите символ, адрес которого необходимо узнать
    printf("Adres pervogo vhojdeniya:[%d] ", str_chr(q,w)) ;
    return 0;
}
